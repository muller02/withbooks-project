<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.withbooks.web.repository.ShortsRepository">


	<insert id="save"  useGeneratedKeys="true" keyProperty="id" parameterType="Shorts">
		INSERT INTO shorts (
		book_id, user_id, content
		)
		VALUES (
		#{bookId}, #{userId}, #{content}
		)
	</insert>

	<select id="findById" resultType="Shorts">
		select * from shorts
		where id = #{shortsId}
	</select>





</mapper>